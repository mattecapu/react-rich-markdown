{
  "name": "react-rich-markdown",
  "version": "1.0.1",
  "description": "A ready-to-go component to render rich Markdown snippets (md + LaTex + code sh)",
  "repository": {
    "url": "https://github.com/mattecapu/react-rich-markdown.git"
  },
  "main": "Markdown.js",
  "style": "styles.css",
  "scripts": {
    "start": "npm-run-all build watch",
    "test": "chromium-browser tests/index.html",
    "build": "npm-run-all -p build:css build:js -s build:tests",
    "build:css": "postcss -c postcss.json > styles.css",
    "build:js": "babel source/Markdown.jsx > Markdown.js",
    "build:tests": "browserify -t [ babelify ] --debug tests/tests.jsx > tests/tests.js",
    "watch": "gnome-terminal -e 'npm-run-all -p watch:js watch:tests'",
    "watch:js": "chokidar source/Markdown.jsx -c 'npm run build:js'",
    "watch:tests": "chokidar tests/tests.jsx source/Markdown.js -c 'npm run build:tests'"
  },
  "keywords": [
    "component",
    "react",
    "markdown",
    "latex",
    "syntax-highlighting"
  ],
  "author": "Matteo Capucci <mattecapu@live.it>",
  "license": "ISC",
  "dependencies": {
    "katex": "^0.6.0",
    "markdown-it": "^5.0.2",
    "markdown-it-highlightjs": "^2.0.0",
    "markdown-it-math": "^3.0.2",
    "markdown-it-smartarrows": "^1.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "react": "^0.14.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.1.2",
    "babel-cli": "^6.2.0",
    "babel-plugin-transform-react-jsx": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.3.2",
    "npm-run-all": "^1.3.3",
    "postcss-cli": "^2.3.2",
    "postcss-import": "^7.1.3",
    "postcss-url": "^5.0.2",
    "react-dom": "^0.14.3"
  },
  "babel": {
    "plugins": [
      "transform-react-jsx"
    ],
    "presets": [
      "es2015"
    ]
  }
}
